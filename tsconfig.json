{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext", "ES2018.AsyncIterable", "ES2021.String"],
		"allowJs": true,
		"downlevelIteration": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		// Ensure that .d.ts files are created by tsc, but not .js files
		"declaration": true,
		"noEmit": true,
		"baseUrl": ".",
	},
	"include": [
		"types/next-env.d.ts",
		"types/index.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"tailwind.config.js"
	],
	"exclude": ["node_modules"]
}
